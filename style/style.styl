  width 700px
  margin 0 0

.container
  display flex
  justify-content center
  align-items center
  margin 30px 0


.button, .arrow-button, .info-circle, .slider-block
  margin 0 20px

.form
  display flex
  flex-direction column

.form_left
  align-items flex-end

  .button
    margin 0px

.form_right
  align-items center

  .form_toggles
    margin-bottom 12px
