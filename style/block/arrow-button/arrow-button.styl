.arrow-button
  position relative
  width 50px
  height 50px
  border-radius 50%
  border 3px solid maincolor
  background white
  outline none
  cursor pointer
  transition 0.5s

.svg-arrow-button
    width 30px
    height 30px

.arrow
  fill none
  stroke maincolor
  stroke-width 3.5

.arrow-button:hover
  background maincolor

  .arrow
    stroke white
