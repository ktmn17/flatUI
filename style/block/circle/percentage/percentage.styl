.circle-percentage
  position relative
  display inline-block
  width 100px
  height 100px
  transition 0.5s

.circle-percentage__svg
  width 100%
  height 100%
  transform rotate(-90deg)

.circle-percentage__svg-ring
  fill white
  r 47
  cx 50%
  cy 50%
  stroke alternatecolor
  stroke-width 5


.circle-percentage__input
  position absolute
  top 25%
  left 25%
  width 50px
  border none
  outline none
  color #9d9d9d
  font-size 40px
  font-family mainfont
  font-style italic
  text-align center
  transition 0.5s

.circle-percentage__input:hover
  animation input-hover 900ms infinite linear

@keyframes input-hover
  25%   {transform: translateY(-1px)}
  75% {transform: translateY(1px)}
  100% {transform: translateY(0px)}
