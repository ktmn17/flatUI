.user-profile
  display flex
  flex-direction row
  justify-content center
  width 100%

  .user-photo
    margin 0 12px

.user-profile__info
  position relative
  width 163px
  height 93px
  background-color #e5e5e5
  border-radius 6px
  text-align center

  &::after
    content: '';
    position: absolute;
    z-index: 0;
    top: 45%;
    left: -2%;
    width: 10px;
    height: 10px;
    border-radius: 2px;
    background-color: inherit;
    transform: rotate(45deg);


.user-profile__h2
  margin 10px 0 0
  padding 0 0
  font-size 18px
  color alternatecolor
  font-weight 400

.user-profile__h3
  margin 0
  padding 0
  text-transform uppercase
  font-weight 900
  font-size 11px
  letter-spacing 1px
  color #4f4f4f

.user-profile__social-link
  display inline-block
  margin 11px 4px
  width 32px
  height 32px
