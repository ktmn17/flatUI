.container
  width 100%
  margin 10px auto

.container__content
  display flex
  justify-content space-around
  align-items flex-start
  margin 30px auto

.container__left
  display inline-block
  width 50%

.container__right
  @extend .container__left

.container__h1
  color #4f4f4f
  text-align center
  font-family mainfont
  font-size 18px
  font-weight 900
  text-transform uppercase
  letter-spacing 1.4px


.container_button-group
  .container__content
    align-items flex-end
    width 78%

.container_arrow-button-group
  .container__content
    width 50%

.container_stages
  .container__content
    justify-content center

.container_form-elements
  .container__left
    .form__comment
      display flex
      flex-direction column
      align-items flex-end
  .container__right
    .container__content
      justify-content center
      .form__toggle, .form__tickbox
        margin-right 10px

.container_search-and-user-profile
  .container__right
    .container__content
      display flex
      flex-direction column
      .user-profile
        margin-top 20px
