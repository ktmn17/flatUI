.container
  width 100%
  margin 0px auto
  padding 30px 0

.container__content
  width 84%
  display flex
  justify-content space-between
  align-items flex-start
  margin 0px auto

.container__left
  width 48%

.container__right
  @extend .container__left

.container__h1
  margin-bottom 30px
  color #4f4f4f
  text-align center
  font-family mainfont
  font-size 18px
  font-weight 900
  text-transform uppercase
  letter-spacing 1.4px


.container_button-group
  .container__content
    align-items flex-end
    width 70%

.container_arrow-button-group
  .container__content
    width 50%

.container_stages
  .container__content
    justify-content center

.container_form-elements
  .container__left
    .form__button-submit
      float right
  .container__right
    .container__h1:last-of-type
      margin-top 38px
    .container__content
      justify-content center
      .form__toggle, .form__tickbox
        margin-right 10px

.container_search-and-user-profile
  .container__right
    display flex
    flex-direction column
    align-items flex-end

    .container__h1
      align-self center

    .user-profile:first-of-type
      margin-bottom 20px
