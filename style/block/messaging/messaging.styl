.messaging
  position relative
  width 287px
  border-radius 3px
  background #f2f2f2
  overflow hidden

.messaging__header
  width 100%
  height 115px
  background #46ab9d

.messaging__h2
  padding-top 18px
  padding-bottom 26px
  text-align center
  font-family alternatefont
  font-size 32px
  color white
  font-weight 300
  background maincolor

.messaging__main
  width 84%
  margin 0 auto

.messaging__main-header
  margin-top -45px
  margin-bottom 18px
  display flex
  justify-content space-between
  align-items flex-end

.messaging__icon
  margin 0 5px
  cursor pointer

.messaging__icon_camera
  position relative
  top -3px

.messaging__textarea-get-message
  width 100%
  margin 0
  margin-bottom 18px
  padding 20px
  padding-top 18px
  border 0
  outline 0
  border-radius 5px
  resize none
  background-color white
  color #868686
  font-family mainfont
  font-size 12.5px
  font-weight 400
  letter-spacing 0.8px
  box-sizing border-box

.messaging__textarea-enter-message
  @extend .messaging__textarea-get-message
  min-height 88px
  margin-bottom 8px
  padding 17px
  padding-top 13px
  background-color #e5e5e5
  border 3px solid white

.messaging__button
  width 100%
  margin-bottom 26px
  background-color maincolor
  color white
  letter-spacing 1px
