.slider-block
  padding-top 30px

.ui-slider
  position relative
  width 260px
  outline none
  text-align left
  background-color maincolor
  border-radius 4px

.ui-slider-handle
  position absolute
  z-index 2
  width 20px
  height 20px
  border none
  border-radius 50%
  outline none
  cursor pointer
  background-color maincolor
  color white
  text-align center
  font-size 13px
  font-family mainfont


.ui-slider-horizontal
  height 5px

  .ui-slider-handle
    top -.6em
    margin-left -12px

  .ui-slider-range
    top 0
    height 100%

  .ui-slider-range-min
    left 0

  .ui-slider-range-max
    right 0

.slider-block__info
  position absolute
  display flex
  justify-content space-between
  width 260px
  padding-top 10px
  color #d1d1d1
  font-size 11px
  font-weight bold
