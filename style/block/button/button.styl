.button
  position relative
  width 118px
  height 32px
  border 1px solid maincolor
  border-bottom none
  outline none
  color maincolor
  background-color #fff
  box-shadow 0px 3px 0px 0px darken(maincolor, 20%)
  border-radius 2px
  font-family mainfont
  font-weight 900
  font-size 12px
  text-transform uppercase
  letter-spacing 0.5px
  cursor pointer
  transition 0.5s

.button:hover
  color #fff
  background-color maincolor
  box-shadow: 0px 3px 0px 0px darken(maincolor, 20%)

.button:active
  animation click-button 50ms linear forwards

@keyframes click-button
  0%   {top: 0px;}
  100% {top: 3px; box-shadow none;}


.button_color_alternate
  color alternatecolor
  border-color alternatecolor
  box-shadow 0px 3px 0px 0px darken(alternatecolor, 20%)

.button_color_alternate:hover
  background-color alternatecolor
  box-shadow: 0px 3px 0px 0px darken(alternatecolor, 20%)


.button_size_small
  width 78px
  height 22px
  font-size 10px
